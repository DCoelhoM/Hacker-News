<ul>
  <li>
    <%= link_to 'Home', '/' %>
  </li>
  <% if current_user %>
    <li style="float:right;">
      <%= link_to "Logout", '/logout' %>
    </li>
    <li style="float:right;">
      <span>Signed in as <%= current_user.name %></span>
    </li>
  <% else %>
    <li style="float:right;">
      <%= link_to 'Signup', '/signup' %>
    </li>
    <li style="float:right;">
      <%= link_to 'Login', '/login' %>
    </li>
  <% end %>
</ul>
<h1>Submit Article</h1>
<%= form_for :article, url: articles_path do |f| %>
  <p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :source %><br>
  <%= f.text_field :source %>
  </p>

  <p>
  <%= f.label :text %><br>
  <%= f.text_area :text %>
  </p>

  <p>
  <%= f.submit %>
  </p>
<% end %>
